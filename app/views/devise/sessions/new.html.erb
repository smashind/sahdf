<div class="row">
  <div class="col-lg-6 col-lg-offset-3 col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2">
    <div class="well bs-component">
      <div class="form-horizontal">
        <fieldset>
          <div class="text-center">
            <h2>Log in</h2>
            <%= link_to raw("<i class='fa fa-facebook'></i>Log in with Facebook"), user_omniauth_authorize_path(:facebook), class: "h4 fb-connect" %>
          </div>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group">
              <%= f.label :email, class: "col-md-4 control-label" %>
              <div class="col-md-8">
                <%= f.email_field :email, autofocus: true, required: true, class: "form-control" %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :password, class: "col-md-4 control-label" %>
              <div class="col-md-8">
                <%= f.password_field :password, autocomplete: "off", required: true, class: "form-control" %>
              </div>
            </div>

            <% if devise_mapping.rememberable? -%>
              <div class="form-group">            
                <div class="col-md-8 col-md-offset-4">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me, "Remember me" %> 
                </div>
              </div>
            <% end -%>

            <div class="form-group">
              <div class="col-md-8 col-md-offset-4">
                <%= f.submit "Log in", class: "btn btn-success btn-block", data: { disable_with: "Logging in..." } %>
              </div>
            </div>
          <% end %>

        </fieldset>
      </div>
    </div>
    <p class="text-center">Don't have an account? <strong><%= link_to "Create one", new_user_registration_path %></strong></p>
  </div>
</div>
