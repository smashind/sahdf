<div class="row">
  <div class="col-lg-6 col-lg-offset-3 col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2">
    <div class="well bs-component">
      <div class="form-horizontal">
        <fieldset>
          <div class="text-center">
            <h2>Join SAHD Funny</h2>
            <%= link_to raw("<i class='fa fa-facebook'></i>Sign up with Facebook"), user_omniauth_authorize_path(:facebook), class: "h4 fb-connect" %>
          </div>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>

            <div class="form-group">
              <%= f.label :name, class: "col-md-4 control-label" %>
              <div class="col-md-8">
                <%= f.text_field :name, autofocus: true, required: true, class: "form-control" %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :email, class: "col-md-4 control-label" %>
              <div class="col-md-8">
                <%= f.email_field :email, required: true, class: "form-control"  %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :password, class: "col-md-4 control-label" %>
              <div class="col-md-8">
                <%= f.password_field :password, autocomplete: "off", required: true, class: "form-control" %>
              </div>
            </div>

            <div class="form-group">
              <div class="col-md-8 col-md-offset-4">
                <%= f.submit "Sign up", class: "btn btn-success btn-block", data: { disable_with: "Signing up..." } %>
              </div>
            </div>
          <% end %>

        </fieldset>
      </div>
    </div>
    <p class="text-center">Already have an account? <strong><%= link_to "Log in", new_user_session_path %></strong></p>
  </div>
</div>