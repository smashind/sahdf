<%= form_for @post, remote: true do |f| %>
  <div class="form-horizontal">
    <fieldset>
      <div class="form-group">
        <div class="col-sm-12">
        <%= f.text_area :body, class: "form-control", placeholder: "Your sad, funny story.", rows: "4" %>
        <span class="help-block"></span>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-12">
        <%= f.file_field :picture %>
        <span class="help-block"></span>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-12">
          <%= f.submit "Post it", class: "btn btn-primary", data: { disable_with: "Posting..." }, id: 'submit-post-button' %>
        </div>
      </div>
    </fieldset>
  </div>
<% end %>